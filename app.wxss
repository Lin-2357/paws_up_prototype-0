.bar,.botbar{
  position: fixed;
  height: 25vw;
  width: 100%;
  background-color: #464646;
  border-bottom-left-radius: 7%;
  border-bottom-right-radius: 7%;
  z-index: 2;
}
.botbar{
  bottom: 0%;
  height: 10vh;
  border-top-left-radius: 7%;
  border-top-right-radius: 7%;
  border-bottom-left-radius: 0%;
  border-bottom-right-radius: 0%;
}