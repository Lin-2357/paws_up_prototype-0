/* pages/homepage/home.wxss */
.page{
  width: 100%;
  position: absolute;
  display: flex; 
  align-items: center; 
  flex-direction: column;
}
.p{
  font-size: 9vw;
  font-weight: 700;
  position: relative;
  top: calc(50% - 9vw);
  left: 5vw;
  color: white;
}
.u{
  position: absolute;
  right: 3vw;
  font-size: 6vw;
  bottom: 10%;
  color: white;
  font-weight: 500;
}
.t1{
  position: relative;
  top: 2vh;
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.t2{
  width: 100%; 
  background-color: #464646; 
  color: white; 
  text-align: center; 
  font-size: x-large; 
  border-radius: 20%;
  padding-top: 3%;
  padding-bottom: 3%;
  margin-top: 1vh;
}
.t3{
  border-style: solid; 
  border-color: pink;
  border-radius: 10%;
  background-color: white;
  font-weight: 400;
  padding: 7%;
  margin-top: 1vh;
  margin-bottom: 1vh;
}